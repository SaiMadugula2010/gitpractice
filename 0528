 data days; 
  a=intnx('MONTH', today(), 0, 'Begin');
	do d=&lastmonth to a-1; 
		y=year(d);m=month(d); dc="'"||put(d,yymmdd10.)||"'";
 		if weekday(d) in (2:6) then output;	 
	end; 
run;
proc sort; by y m descending d; 
